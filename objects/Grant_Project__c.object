    <!-- ============================================ -->
    <!-- VALIDATION RULES                             -->
    <!-- ============================================ -->

    <!-- H-3: Prevent edits to key fields after project approval -->
    <validationRules>
        <fullName>Prevent_Edit_After_Approval</fullName>
        <active>true</active>
        <description>Prevents changes to funding, use plan, and project name after project is approved, in progress, or completed. Admins with JIL_CRM_Admin permission set are exempt.</description>
        <errorConditionFormula>AND(
    OR(
        ISPICKVAL(PRIORVALUE(Project_Status__c), "Approved"),
        ISPICKVAL(PRIORVALUE(Project_Status__c), "In Progress"),
        ISPICKVAL(PRIORVALUE(Project_Status__c), "Completed")
    ),
    OR(
        ISCHANGED(Total_Funds_Requested__c),
        ISCHANGED(Funds_Use_Plan__c),
        ISCHANGED(Project_Name__c),
        ISCHANGED(Project_Description__c),
        ISCHANGED(Funding_Needed_By__c)
    ),
    NOT($Permission.JIL_CRM_Admin)
)</errorConditionFormula>
        <errorMessage>Cannot modify funding amount, use plan, or project details after approval. Please contact your grant administrator if changes are needed.</errorMessage>
    </validationRules>

